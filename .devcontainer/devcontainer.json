{
  "name": "Hugo Extended",
  "image": "mcr.microsoft.com/devcontainers/universal:2-linux",
  "features": {
    "ghcr.io/devcontainers/features/hugo:1": {
      "version": "latest"
    }
  },
  "postCreateCommand": "hugo version",
  "customizations": {
    "vscode": {
      "extensions": [
        "budparr.language-hugo-vscode",
        "ms-vscode.vscode-json"
      ]
    }
  },
  "forwardPorts": [1313],
  "portsAttributes": {
    "1313": {
      "label": "Hugo Server",
      "onAutoForward": "notify"
    }
  }
}
